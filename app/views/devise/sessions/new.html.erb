<div class="container is-flex is-justify-content-center is-align-items-center" style="min-height: 100vh;">
  <div class="column is-4">
    <div class="box">
      <h2 class="title is-3 has-text-centered">Log in</h2>

      <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
        <% if resource.errors.any? %>
          <div class="notification is-danger">
            <ul>
              <% resource.errors.full_messages.each do |message| %>
                <li><%= message %></li>
              <% end %>
            </ul>
          </div>
        <% end %>

        <div class="field">
          <label class="label">Email</label>
          <div class="control">
            <%= f.email_field :email, class: 'input', placeholder: 'Enter your email' %>
          </div>
        </div>


        <div class="field">
          <label class="label">Password</label>
          <div class="control">
            <%= f.password_field :password, class: 'input', placeholder: 'Enter your password' %>
          </div>
        </div>

        <div class="field">
          <label class="checkbox">
            <%= f.check_box :remember_me %>
            Remember me
          </label>
        </div>


        <div class="field">
          <div class="control">
            <%= f.submit 'Log in', class: 'button is-primary is-fullwidth' %>
          </div>
        </div>
      <% end %>

      <div class="has-text-centered">
        <%= link_to 'Forgot your password?', new_password_path(resource_name), class: 'button is-text' %><br>
        <%= link_to "Don't have an account? Sign up", new_registration_path(resource_name), class: 'button is-text' %>
      </div>
    </div>
  </div>
</div>
