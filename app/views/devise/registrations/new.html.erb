<div class="container is-flex is-justify-content-center is-align-items-center" style="min-height: 100vh;">
  <div class="column is-4">
    <div class="box">
      <h2 class="title is-3 has-text-centered">Sign up</h2>

      <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
        <% if resource.errors.any? %>
          <div class="notification is-danger">
            <ul>
              <% resource.errors.full_messages.each do |message| %>
                <li><%= message %></li>
              <% end %>
            </ul>
          </div>
        <% end %>

        <div class="field">
          <label class="label">Name</label>
          <div class="control">
            <%= f.text_field :name, class: 'input', placeholder: 'Enter your name' %>
          </div>
        </div>

        <div class="field">
          <label class="label">Email</label>
          <div class="control">
            <%= f.email_field :email, class: 'input', placeholder: 'Enter your email' %>
          </div>
        </div>

        <div class="field">
          <label class="label">Password</label>
          <div class="control">
            <%= f.password_field :password, class: 'input', placeholder: 'Enter your password' %>
          </div>
        </div>

        <div class="field">
          <label class="label">Password confirmation</label>
          <div class="control">
            <%= f.password_field :password_confirmation, class: 'input', placeholder: 'Confirm your password' %>
          </div>
        </div>

        <%= f.hidden_field :role, id: "role_input", value: false %>

<div class="field">
  <div class="control">
    <button type="submit" class="button is-primary is-fullwidth" onclick="document.getElementById('role_input').value = 'false';">
      Sign up as User
    </button>
  </div>
</div>

<div class="field">
  <div class="control">
    <button type="submit" class="button is-danger is-fullwidth" onclick="document.getElementById('role_input').value = 'true';">
      Sign up as Admin
    </button>
  </div>
</div>
      <% end %>

      <div class="has-text-centered">
        <%= link_to "Already have an account? Log in", new_user_session_path, class: 'button is-text' %>
      </div>
    </div>
  </div>
</div>
